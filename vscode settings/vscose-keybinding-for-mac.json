// Place your key bindings in this file to override the defaultsauto[]
[
    {
        "key": "cmd+d",
        "command": "editor.action.copyLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "shift+alt+down",
        "command": "-editor.action.copyLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    // this changes are made by SUJIT ROY
    // vscode-keybindings for navigation with I/J/K/L and additional functionality with surrounding characters 
    // Place your key bindings in this file to overwrite the defaults
    // ALT + I/J/K/L: up/left/down/right
    // ALT + SHIFT + I/J/K/L: mark text up/left/down/right
    // cmd + J/L: send cursor to start/end of line
    // cmd + ALT + J/L: send cursor to start/end of word
    // cmd + ALT + U/O: send cursor to "wordPartLeft"/"wordPartRight"
    // cmd + ALT +  SHIFT + U/O: mark from cursor to "wordPartLeft"/"wordPartRight"
    // cmd + ALT + Y: got to declaration
    // cmd + I/K: add/remove another cursor up/down
    // -- IF LINEJUMPER IS INSTALLED -- //
    // cmd + ALT + I/K: move cursor 10 lines up/down
    // cmd + ALT + SHIFT + I/K: mark 10 lines up/down
    {
        "key": "cmd+shift+i",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+shift+k",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus"
    },
